{
  "name": "my-smart-desk",
  "version": "1.0.0",
  "description": "My Smart Desk - Personal help web application starting with a Finance Tracker.",
  "main": "src/server.js",
  "scripts": {
    "postinstall": "npm install --prefix client",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server.js",
    "dev:client": "npm run dev --prefix client",
    "build": "npm run build --prefix client",
    "start": "node src/server.js",
    "lint": "npm run lint --prefix client"
  },
  "keywords": [
    "finance",
    "dashboard",
    "openai",
    "airtable"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.46.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.15",
    "openai": "^6.9.1",
    "pdf-parse": "^2.4.5"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
